<h2>Editing Book</h2>
<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title, class: "book_title" %>
    <h4>Body</h4>
    <%= f.text_area :body, class: "book_body" %>
 <br>
    <%= f.submit 'Update Book' %>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
 
<% end %>

