<%= form_for(@user) do |f| %>
    <div class="form-group has-icon">
        <%= render 'layouts/error_message', model: f.object %>
        <label class="control-label sr-only" for="inputEmail">Name</label>
        <%= f.text_field :name, autofocus: true, class:"form-control", placeholder:"名前"%>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>
        <div class="form-group has-icon">
        <div class="user-edit-image">
        <%= attachment_image_tag @user, :profile_image,　format: 'jpeg', size: "100x100" %>
    </div>
        <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user_image" %>
 
    <div class="form-group has-icon">
        <label class="control-label sr-only" for="inputEmail">Introduction</label>
        <%= f.text_field :introduction, autofocus: true, class:"introduction", placeholder:"introduction" %>
    </div>
    <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>

