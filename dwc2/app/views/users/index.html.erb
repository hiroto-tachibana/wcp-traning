
<%= render 'users/userinfo', user: @user %>
<%= render 'books/newbook', book: @book %>

<h1>Users</h1>

<%= render 'layouts/notice' %>

<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
    <tbody>
        <% @users.each do |user| %>
        <td> <%= link_to "/users/#{user.id}", class: "user_#{user.id}" do %>
          <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg",  size: "100x100", class: "img-circle pull-left profile-thumb" %>
        <% end %> </td>
        <td><%= user.name %></td>
        <td><%= link_to 'show', "/users/#{user.id}", class: "user_#{user.id}" %></td>
      </tr>
      <% end %>
    </tbody>

</table>

