

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>image</th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
    <tbody>
        <% @books.each do |book| %>
        <th></th>
        <td><%= link_to book.title, "/books/#{book.id}", class: "show_#{book.id}" %></td>
        <td><%= book.opinion %></td>
      </tr>
      <% end %>
    </tbody>

</table>

</table>




<h1>New Book</h1>
<%= form_for(@book) do |f| %>
 
    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Opinion</h4>
    <%= f.text_area :opinion %>

    <br>
 
    <%= f.submit 'Create Book' %>
 
<% end %>